{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@": ["./src/index.ts"],
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}